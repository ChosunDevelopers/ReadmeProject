<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.readme.mapper.memberMapper">

<!--   
        <select id="selectMember" resultType="com.readme.dto.MemberVO" >
            SELECT ID, PW ,NAME FROM TEST
        </select>
-->
 
 
    <select id="selectMember" resultType="memberVO">
        SELECT ID, PW ,NAME FROM TEST
    </select>
    
    <insert id = "insertMember" parameterType = "memberVO">
    
    INSERT INTO MEMBER(
    	ID
    	,PASSWORD
    	,JUMIN
    	,PHONE
    	,LEGION
    	
    )
    VALUES
    (
    	#{ID}
    	,#{PASSWORD}
    	,#{JUMIN}
    	,#{PHONE}
    	,#{LEGION}
    	
    )
    </insert>
    
    <select id = "loginMember" parameterType = "memberVO" resultType = "memberVO">

   	SELECT 
		ID
		,PASSWORD
		,JUMIN
		,PHONE
		,LEGION
		,PROFILEIMG
		,SIGNDATE
		
	FROM MEMBER
	WHERE
		ID = #{id} AND
		PASSWORD = #{password} 
    
    </select>
    
    
    

</mapper>
